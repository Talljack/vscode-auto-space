{
  "publisher": "talljack",
  "name": "vscode-auto-space",
  "displayName": "Auto Add Space between Chinese and English",
  "version": "1.3.1",
  "private": true,
  "packageManager": "pnpm@8.1.1",
  "description": "Auto add space between Chinese and English when you save file",
  "author": "Talljack<yugang.cao@12gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/Talljack",
  "repository": {
    "type": "git",
    "url": "https://github.com/Talljack/vscode-auto-space.git"
  },
  "bugs": {
    "url": "https://github.com/Talljack/vscode-auto-space.git/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.69.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "onLanguage"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.autoAddSpace",
        "title": "Auto Add Space"
      }
    ],
    "configuration": {
      "title": "Auto Add Space configuration",
      "properties": {
        "autoAddSpace.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable Auto Add Space"
        },
        "autoAddSpace.comment": {
          "type": "string",
          "default": "all",
          "enum": ["all", "comment"],
          "description": "Auto Add Space's type"
        }
      }
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.4",
    "@antfu/ni": "^0.21.2",
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.69.0",
    "@vscode/vsce": "^2.15.0",
    "bumpp": "^9.1.0",
    "eslint": "^8.37.0",
    "esno": "^0.16.3",
    "pnpm": "^8.1.1",
    "rimraf": "^4.4.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.3",
    "vite": "^4.2.1",
    "vitest": "^0.29.8"
  }
}
