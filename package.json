{
  "publisher": "talljack",
  "name": "vscode-auto-space",
  "displayName": "vscode auto space by comment between chinese and english",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.1.1",
  "description": "",
  "author": "Talljack<yugang.cao@12gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/Talljack",
  "repository": {
    "type": "git",
    "url": "https://github.com/Talljacl/vscode-auto-space.git"
  },
  "bugs": {
    "url": "https://github.com/Talljacl/vscode-auto-space.git/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.69.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "onLanguage",
    "onCommand:extension.addSpaceBetweenComment"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.addSpaceBetweenComment",
        "title": "Auto add space"
      }
    ]
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.4",
    "@antfu/ni": "^0.21.2",
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.69.0",
    "bumpp": "^9.1.0",
    "eslint": "^8.37.0",
    "esno": "^0.16.3",
    "pnpm": "^8.1.1",
    "rimraf": "^4.4.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.3",
    "vite": "^4.2.1",
    "vitest": "^0.29.8",
    "vsce": "^2.15.0"
  }
}
