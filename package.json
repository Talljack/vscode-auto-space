{
  "publisher": "talljack",
  "name": "vscode-auto-space",
  "displayName": "Auto Add Space between Chinese and English",
  "version": "1.3.5",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "description": "Auto add space between Chinese and English when you save file",
  "author": "Talljack<yugang.cao12@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/Talljack",
  "repository": {
    "type": "git",
    "url": "https://github.com/Talljack/vscode-auto-space.git"
  },
  "bugs": {
    "url": "https://github.com/Talljack/vscode-auto-space.git/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.69.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "onLanguage"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.autoAddSpace",
        "title": "Auto Add Space"
      }
    ],
    "configuration": {
      "title": "Auto Add Space configuration",
      "properties": {
        "autoAddSpace.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable Auto Add Space"
        },
        "autoAddSpace.comment": {
          "type": "string",
          "default": "all",
          "enum": [
            "all",
            "comment"
          ],
          "description": "Auto Add Space's type"
        }
      }
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch",
    "lint": "eslint src",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "dependencies": {
    "pangu": "^4.0.7"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@antfu/ni": "^0.21.12",
    "@types/node": "^20.11.24",
    "@types/pangu": "^4.0.2",
    "@types/vscode": "^1.87.0",
    "@vscode/vsce": "^2.24.0",
    "bumpp": "^9.3.0",
    "eslint": "^8.57.0",
    "pnpm": "^8.15.4",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.5",
    "vitest": "^1.3.1"
  }
}
